<head>
	<style>
		html {
			height:100%;
		}
		body {
			background: -webkit-linear-gradient(top, rgba(10,31,51,1) 0%, rgba(10,31,51,1) 100%); 
			background: -moz-linear-gradient(top, rgba(10,31,51,1) 0%, rgba(10,31,51,1) 100%);
			background: -ms-linear-gradient(top, rgba(10,31,51,1) 0%, rgba(10,31,51,,1) 100%);
			background: linear-gradient(to bottom, rgba(10,31,51,1) 0%, rgba(10,31,51,1) 100%);
			min-height:100%;
		}

		.content {
			background: #fff;
			margin:0 auto;
			height:100%;
			width:100%;
			margin-top: 120px;
			padding-top:10px;
			padding-bottom:10px;
			padding-left:30px;
			padding-right:30px;
			border-radius:5px;
			box-shadow: 1px 1px 1px 1px #333333;
		}

		.checkbox {
			margin-left:0px;
		}
	</style>
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="content">
					<h2>Sign in</h2>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="form-group">
							<%= f.label :email %><br />
							<%= f.email_field :email, autofocus: true, :class => "form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :password %><br />
							<%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
						</div>

						<% if devise_mapping.rememberable? -%>
							<div>
								<%= f.check_box :remember_me %> <%= f.label :remember_me %>
							</div>
						<% end -%>

						<div><%= f.submit "Sign in", :class => 'btn btn-primary' %></div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
</body>
